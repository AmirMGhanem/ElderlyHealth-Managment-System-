<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElderlyActivity"
    android:background="@drawable/elderly">

    <ImageView
        android:id="@+id/imgwater"
        android:layout_width="64dp"
        android:layout_height="101dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/imgtoilet"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/water" />

    <ImageView
        android:id="@+id/imgmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/imgemergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/meal" />

    <ImageView
        android:id="@+id/imgtoilet"
        android:layout_width="107dp"
        android:layout_height="123dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/toilet" />

    <ImageView
        android:id="@+id/imgemergency"
        android:layout_width="119dp"
        android:layout_height="115dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/emergency" />

    <TextView
        android:id="@+id/txttime"
        android:layout_width="409dp"
        android:layout_height="41dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.699"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

</androidx.constraintlayout.widget.ConstraintLayout>